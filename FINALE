def book view():
conn = sqlite3.connect('library.db')
c = conn.cursor()
c.execute("SELECT * FROM books")
books = c.fetchall()
conn.close()
return books

def issue view():
conn = sqlite3.connect('library.db')
c = conn.cursor()
c.execute("SELECT * FROM issue")
issue = c.fetchall()
conn.close()
return issue

